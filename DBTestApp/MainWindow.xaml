<Window x:Class="DBTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Name="ItemList">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear" Click="MenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Address" Width="400" DisplayMemberBinding="{Binding Address}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Margin="0,5">
                <GroupBox.Header>
                    <CheckBox VerticalAlignment="Center" x:Name="EnableCheckBox" IsChecked="True" Content="Enable Editing"/>
                </GroupBox.Header>

                <Grid x:Name="EditGrid" IsEnabled="{Binding ElementName=EnableCheckBox, Path=IsChecked}" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name: " VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="NameTextBox" HorizontalAlignment="Left" Width="200" Height="20" Margin="0,2" Text="{Binding ElementName=ItemList, Path=SelectedItem.Name, Mode=OneWay}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Address: " VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="AddressTextBox" HorizontalAlignment="Left" Width="200" Height="20" Margin="0,2" Text="{Binding ElementName=ItemList, Path=SelectedItem.Address, Mode=OneWay}"/>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="CRUD" Margin="0,0,0,5">
